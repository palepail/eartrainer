<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical" >

	<TextView android:text="Options" android:id="@+id/textView1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" android:layout_gravity="center|top"
		android:layout_marginTop="15dip" android:textSize="30dip"
		android:textColor="#000" android:layout_centerHorizontal="true"></TextView>
	<ScrollView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/scrollView1"
		android:layout_marginTop="60dip">

		<RelativeLayout
		    android:id="@+id/relativeLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<Button android:text="optionStretch" android:layout_width="0dip"
				android:layout_alignBottom="@+id/textView2"
				android:layout_alignParentLeft="false" android:id="@+id/optionStretch"
				android:layout_alignParentRight="true" android:layout_height="wrap_content"></Button>
			<Button android:text="optionAnchor" android:layout_width="0dip"
				android:layout_alignBottom="@+id/textView2" android:id="@+id/optionAnchor"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"></Button>
			<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
				android:textSize="20dip" android:layout_marginTop="40dip"
				android:text="Instrument: " android:textColor="#000"
				android:layout_marginRight="30dip" android:layout_height="wrap_content"
				android:layout_toLeftOf="@+id/optionAnchor"></TextView>
			<Spinner android:layout_marginLeft="30dip"
				android:layout_toRightOf="@+id/optionAnchor" android:id="@+id/spinner1"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/textView2"></Spinner>
				<TextView android:id="@+id/textView6" android:layout_width="wrap_content"
				android:textSize="20dip" android:layout_marginTop="30dip" android:layout_below="@+id/textView2"
				android:text="Clef: " android:textColor="#000"
				android:layout_marginRight="30dip" android:layout_height="wrap_content"
				android:layout_toLeftOf="@+id/optionAnchor"></TextView>
				<Spinner android:layout_marginLeft="30dip"
				android:layout_toRightOf="@+id/optionAnchor" android:id="@+id/spinner3"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/textView6"></Spinner>
			
			<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
				android:textSize="20dip" android:layout_marginTop="30dip"
				android:text="Timed Mode: " android:textColor="#000"
				android:layout_marginRight="30dip" android:layout_height="wrap_content"
				android:layout_below="@+id/textView6" android:layout_toLeftOf="@+id/optionAnchor"></TextView>
			<CheckBox android:layout_width="wrap_content" android:text=""
				android:layout_alignBottom="@+id/textView3"
				android:layout_marginLeft="30dip" android:id="@+id/checkBox1"
				android:layout_toRightOf="@+id/optionAnchor" android:layout_height="wrap_content"></CheckBox>
			<TextView android:id="@+id/textView4" android:layout_width="wrap_content"
				android:textSize="20dip" android:layout_marginTop="30dip"
				android:text="Timer Length: " android:textColor="#000"
				android:layout_marginRight="30dip" android:layout_height="wrap_content"
				android:layout_below="@+id/textView3" android:layout_toLeftOf="@+id/optionAnchor"></TextView>
			<Spinner android:layout_marginLeft="30dip"
				android:layout_toRightOf="@+id/optionAnchor" android:id="@+id/spinner2"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/textView4"></Spinner>
			<TextView android:id="@+id/textView5" android:layout_width="wrap_content"
				android:textSize="20dip" android:layout_marginTop="30dip"
				android:text="Result Sound: " android:textColor="#000"
				android:layout_marginRight="30dip" android:layout_height="wrap_content"
				android:layout_below="@+id/textView4" android:layout_toLeftOf="@+id/optionAnchor"></TextView>
			<CheckBox
			    android:id="@+id/checkBox2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_above="@+id/spinner4"
			    android:layout_alignLeft="@+id/spinner4" />
			
			<TextView android:id="@+id/textView7" android:layout_width="wrap_content"
				android:textSize="20dip" android:layout_marginTop="30dip"
				android:text="Number of Notes: " android:textColor="#000"
				android:layout_marginRight="30dip" android:layout_height="wrap_content"
				android:layout_below="@+id/textView5" android:layout_toLeftOf="@+id/optionAnchor"></TextView>
			<Spinner android:layout_marginLeft="30dip"
				android:layout_toRightOf="@+id/optionAnchor" android:id="@+id/spinner4"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/textView7"></Spinner>
			
			<Button android:text="Back" android:layout_width="100dip"
				android:layout_marginTop="350dip" android:id="@+id/back"
				android:background="@android:color/transparent"
				android:layout_marginLeft="60dip" android:layout_toRightOf="@+id/optionAnchor"
				android:layout_height="wrap_content" android:onClick="buttonPressed"
				android:textSize="20dip"></Button>

			
		</RelativeLayout>
	</ScrollView>

</RelativeLayout>
