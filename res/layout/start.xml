<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#ffffffff" android:id="@+id/relativeLayout1"
	android:orientation="vertical">
	<TextView android:text="Ear Trainer" android:id="@+id/textView1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" android:layout_gravity="center|top"
		android:layout_marginTop="30dip" android:textSize="30dip"
		android:textColor="#000" android:layout_centerHorizontal="true"></TextView>
	<TextView android:layout_width="wrap_content" android:id="@+id/textView2"
		android:layout_height="wrap_content" android:text="Version 1.10"
		android:layout_below="@+id/textView1" android:layout_centerHorizontal="true"
		android:textColor="#000"></TextView>
	<TextView android:layout_width="wrap_content" android:id="@+id/textView3"
		android:layout_height="wrap_content" android:text="By: Derek Kam"
		android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"
		android:textColor="#000" android:textSize="15dip"></TextView>
	<Button android:text="Reading Quiz" android:onClick="buttonPressed"
		android:layout_width="wrap_content"
		android:id="@+id/rquiz" android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/practice" android:background="@android:color/transparent"
		android:layout_marginRight="30dip" android:textSize="20dip" android:layout_alignBottom="@+id/practice"></Button>
	<Button android:text="Practice" android:onClick="buttonPressed"
		android:layout_width="wrap_content" android:id="@+id/practice"
		android:layout_centerHorizontal="true" android:layout_height="wrap_content"
		 android:background="@android:color/transparent"
		android:textSize="20dip" android:layout_marginTop="30dip" android:layout_below="@+id/textView3"></Button>
	<Button android:text="Listening Quiz" android:onClick="buttonPressed"
		android:layout_width="wrap_content" android:id="@+id/lquiz"
		android:layout_toRightOf="@+id/practice" android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:layout_marginLeft="30dip" android:textSize="20dip" android:layout_alignBottom="@+id/practice"></Button>
	<Button android:text="Options" android:layout_width="wrap_content"
		android:id="@+id/options" android:layout_height="wrap_content"
		android:layout_below="@+id/rquiz" android:layout_toLeftOf="@+id/StartAnchor"
		android:onClick="buttonPressed" android:background="@android:color/transparent"
		android:layout_marginTop="30dip" android:layout_marginRight="30dip"
		android:textSize="20dip"></Button>
	<Button android:text="About" android:id="@+id/about"
		android:layout_height="wrap_content" android:layout_below="@+id/rquiz"
		android:layout_toRightOf="@+id/StartAnchor" android:onClick="buttonPressed"
		android:background="@android:color/transparent"
		android:layout_marginTop="30dip" android:layout_width="wrap_content"
		android:layout_marginLeft="30dip" android:textSize="20dip"></Button>
	<Button android:text="Button" android:id="@+id/StartAnchor"
		android:layout_height="wrap_content" android:layout_below="@+id/rquiz"
		android:layout_width="0dip" android:layout_centerHorizontal="true"
		android:onClick="buttonPressed" android:background="@android:color/transparent"></Button>
</RelativeLayout>
